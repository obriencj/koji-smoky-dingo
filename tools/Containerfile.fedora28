
# no longer available from the fedora alias
FROM docker.io/fedora:28

WORKDIR /src

RUN dnf install -qy \
        dnf-plugins-core make rpm-build which \
        python3-docutils python3-mock python3-nose koji

ARG VERSION

COPY kojismokydingo-${VERSION}.tar.gz tools/*.patch tools/*.sh /src/

RUN /src/rpmbuild.sh \
        /src /src/kojismokydingo-${VERSION}.tar.gz

# The end.
